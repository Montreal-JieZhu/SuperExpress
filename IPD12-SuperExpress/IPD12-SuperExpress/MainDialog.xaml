        xmlns:WPF="clr-namespace:Microsoft.Maps.MapControl.WPF;assembly=Microsoft.Maps.MapControl.WPF" x:Class="IPD12_SuperExpress.MainDialog"
        mc:Ignorable="d"
        Title="Super Express Ver0.1" Height="877" Width="1413.507" WindowStartupLocation="CenterScreen" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.CanContentScroll="True">
    <Grid Margin="0,0,2,14">
        <TabControl Name="tcTrackingOrShipping" HorizontalAlignment="Left" Height="708" Margin="10,70,0,0" VerticalAlignment="Top" Width="1376">
            <TabItem Name="tiTracking" Header="Tracking">
                <Grid Background="#FFE5E5E5">
                    <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="15,41,0,0" VerticalAlignment="Top" Width="64" Height="21">
                        <ComboBoxItem Content="UPS" IsSelected="True"/>
                    </ComboBox>
                    <ListView x:Name="lvTrackDetails" HorizontalAlignment="Left" Height="555" Margin="15,110,0,0" VerticalAlignment="Top" Width="640" SelectionMode="Single" >

                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Location" Width="160">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextWrapping="Wrap" Text="{Binding Location}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Header="Date" Width="80" DisplayMemberBinding="{Binding Date}" />
                                <GridViewColumn Header="Local Time" Width="80" DisplayMemberBinding="{Binding LocalTime}" />
                                <GridViewColumn Header="Activity" Width="310">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock TextWrapping="Wrap" Text="{Binding Activity}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <TextBox x:Name="tbTrackNumber" HorizontalAlignment="Left" Height="22" Margin="219,41,0,0" TextWrapping="Wrap" Text="1Z8W11E70400554344" VerticalAlignment="Top" Width="193" ScrollViewer.CanContentScroll="True" VerticalScrollBarVisibility="Visible"/>
                    <Button x:Name="btTrack" Click="btTrack_Click" Content="Track" HorizontalAlignment="Left" Margin="451,40,0,0" VerticalAlignment="Top" Width="123" Height="22"/>

                    <WPF:Map x:Name="myMap" CredentialsProvider="AuqsNVXfKfPx5B6juGoyi9rYuEZkIkYns-8GRbMbrx3BnhxpT5KsRNrRUgbyOpsm"  Margin="701,110,0,15" MouseMove="myMap_MouseMove">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="11*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="15*" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Column="1" Width="30" Height="30">
                                <Image x:Name="imgFocus" Source="https://image.flaticon.com/teams/slug/smashicons.jpg" MouseDown="imgFocus_MouseDown" />
                            </StackPanel>

                        </Grid>
                        <Border Background="#FF000000" CornerRadius="8,8,8,8" Padding="0,8,0,8" Opacity="0.68" MinWidth="190" MinHeight="30"
                HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,0,5,30">
                            <TextBlock x:Name="Coords" HorizontalAlignment="Center" TextWrapping="Wrap" Foreground="White"/>
                        </Border>

                    </WPF:Map>
                    <Border Background="Black" VerticalAlignment="Top" HorizontalAlignment="Right" Opacity="0.8" BorderBrush="White" BorderThickness="2" CornerRadius="5">
                        <StackPanel x:Name="eventsPanel" IsHitTestVisible="False" Canvas.Left="0" Canvas.Top="0"/>
                    </Border>
                    <GroupBox Header="Weather:" HorizontalAlignment="Left" Height="105" Margin="701,0,0,0" VerticalAlignment="Top" Width="659"/>
                    <Label Content="Country:" HorizontalAlignment="Left" Margin="709,28,0,0" VerticalAlignment="Top" />
                    <Label Content="Tempture:" HorizontalAlignment="Left" Margin="709,71,0,0" VerticalAlignment="Top" />
                    <Label Content="Windy:" HorizontalAlignment="Left" Margin="893,72,0,0" VerticalAlignment="Top" />
                    <Label Content="Description:" HorizontalAlignment="Left" Margin="1032,72,0,0" VerticalAlignment="Top" />
                    <Label HorizontalAlignment="Left" Margin="1232,34,0,0" VerticalAlignment="Top">
                    </Label>
                    <Label x:Name="mainDlg_lbCountry" Content="" HorizontalAlignment="Left" Margin="817,29,0,0" VerticalAlignment="Top" Width="111" Background="White" Height="25" />
                    <Label x:Name="mainDlg_lbTemp" Content="" HorizontalAlignment="Left" Margin="817,73,0,0" VerticalAlignment="Top" Width="65" Background="White" Height="25" />
                    <Label x:Name="mainDlg_lbWindy" Content="" HorizontalAlignment="Left" Margin="964,74,0,0" VerticalAlignment="Top" Width="60" Background="White" Height="24" />
                    <Label x:Name="mainDlg_lbDescription" Content="" HorizontalAlignment="Left" Margin="1138,73,0,0" VerticalAlignment="Top" Width="129" Background="White" Height="25" />
                    <Label Content="City:" HorizontalAlignment="Left" Margin="933,30,0,0" VerticalAlignment="Top" />
                    <Label x:Name="mainDlg_lbCity" Content="" HorizontalAlignment="Left" Margin="996,30,0,0" VerticalAlignment="Top" Width="99" Background="White" Height="26" />
                    <Label Content="Date:" HorizontalAlignment="Left" Margin="1100,30,0,0" VerticalAlignment="Top" />
                    <Label x:Name="mainDlg_lbDate" Content="" HorizontalAlignment="Left" Margin="1160,30,0,0" VerticalAlignment="Top" Width="107" Background="White" Height="26" />
                    <Image x:Name="maindlg_imgDescription" HorizontalAlignment="Left" Height="78" Margin="1276,21,0,0" VerticalAlignment="Top" Width="75" RenderTransformOrigin="-5.222,3.639"/>
                    <Label Content="Track Number：" HorizontalAlignment="Left" Margin="97,37,0,0" VerticalAlignment="Top" Width="117" Height="27"/>
                </Grid>
            </TabItem>
            <TabItem Name="tiShipping" Header="Shipping" Selector.Selected="tiShipping_Selected">
                <Grid Background="#FFE5E5E5" RenderTransformOrigin="0.206,0.356">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="720*"/>
                        <ColumnDefinition Width="630*"/>
                    </Grid.ColumnDefinitions>
                    <WPF:Map x:Name="shipMap" CredentialsProvider="AuqsNVXfKfPx5B6juGoyi9rYuEZkIkYns-8GRbMbrx3BnhxpT5KsRNrRUgbyOpsm" Grid.ColumnSpan="3" Margin="0,68,15,0" MouseLeftButtonUp="shipMap_MouseLeftButtonUp" MouseLeftButtonDown="shipMap_MouseLeftButtonDown"/>

                    <GroupBox Header="Step 1 - Origin/Destination Information" HorizontalAlignment="Left" Height="299" Margin="14,17,0,0" VerticalAlignment="Top" Width="578" Grid.Column="3">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="19*"/>
                                <RowDefinition Height="259*"/>
                            </Grid.RowDefinitions>
                            <Label Content="Ship From Country:" Margin="4,18,354,230" Grid.RowSpan="2"/>
                            <ComboBox Name="cbCountryFrom" SelectionChanged="cbCountryFrom_SelectionChanged" HorizontalAlignment="Left" Margin="8,31.5,0,0" VerticalAlignment="Top" Width="203" Grid.Row="1"/>
                            <Label Content="Province/State: " Margin="4,63.5,352,161" Grid.Row="1"/>
